{% macro subsection(title, items, format) %}
  <div class="block">
    <h3 class="mb-4 font-black">{{ title }}</h3>

    {% if format == 'dl' %}
      <dl>
        {% for key, value in items %}
          <dt data-fx="dt" class="float-left text-right pr-2 w-24">{{ key }}</dt>
          <dd data-fx="dd" class="ml-24">{{ value }}</dd>
        {% endfor %}
      </dl>
    {% else %}
      {{ linkify(items) }}
    {% endif  %}

  </div>
{% endmacro %}


{% macro linkify(items) %}
  <ul class="list-disc pl-6">
    {% for key, value in items %}
      <li data-fx="li">
        <a href={{ value }} target="_blank" rel="noopener noreferrer">{{ key }}</a>
      </li>
    {% endfor %}
  </ul>
{% endmacro %}
