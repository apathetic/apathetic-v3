{% from "macros.njk" import linkify %}

    <footer>
      <ul class="flex colorize list-none px-8 py-4 lg:absolute left-0">
      {% for key, value in contact %}
        <li class="mr-2">
          <a
            class="inline-flex bg-yellow-500 rounded-full p-2"
            href="{{ value }}"
            target="_blank"
            rel="noopener noreferrer"
            title="{{ key }}"
          >
            {% icon key %}
          </a>
        </li>
      {% endfor %}
      </ul>
    </footer>
