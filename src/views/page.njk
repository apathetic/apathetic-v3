<!DOCTYPE html>
<html lang="en">
  <head>
    {%- include 'meta.njk' -%}
    {% block head %}{% endblock %}
  </head>
  <body class="{{ bodyClass if bodyClass }}">

    {% block header %}
      {%- include 'header.njk' -%}
    {% endblock %}

    <main>
      {% block body %}{% endblock %}
    </main>

    {% block footer %}
      {%- include 'footer.njk' -%}
    {% endblock %}

    <script src="/static/main.bundle.js"></script>
    {%- block scripts %}{% endblock -%}
    <script async src="/static/analytics.bundle.js"></script>
    <script async src="https://www.google-analytics.com/analytics.js"></script>
  </body>
</html>
