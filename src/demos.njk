---
title: Demos
---

{% extends 'page.njk' %}
{% set bodyClass = 'demos' %}

{% block body %}
  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-2xl">{{ title }}</h1>
    <span class="inline-block mb-4">A collection of things-in-progress, ideas, and random what-have-yous.</span>

    <ul class="grid md:grid-cols-3 gap-4">
    {%- for title, data in demos -%}
      <li class="px-6 py-4 leading-none border border-gray-400 rounded">
        <a class="block" href="{{ data.url }}" target="_blank">
          <span class="text-lg font-bold">{{ title }}</span>

          {% if data.vid %}
          <video class="block border w-32 md:w-auto mr-4 md:mr-0 md:my-2 float-left md:float-none" autoplay loop src="{{ data.vid }}"></video>
          {% elif data.thumb %}
          <img class="block border w-32 md:w-auto mr-4 md:mr-0 md:my-2 float-left md:float-none" src="{{ data.thumb }}" alt="{{ title }}" />
          {% endif %}
        </a>

        <span class="text-sm">{{ data.description }}</span>

        {% if data.github %}
        <a class="" href={{ data.github }} target="_blank" rel="noopener noreferrer" title="{{ title }}">
          {% icon 'github' %}
        </a>
        {% endif %}
      </li>
    {%- endfor -%}
    </ul>

  </div>
{% endblock %}
